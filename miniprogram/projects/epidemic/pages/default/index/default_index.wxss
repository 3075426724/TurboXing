@import "../../../../../style/public/comm_box_list.wxss";
@import "../../../style/skin.wxss";

page {
	background-color: #fff;
}

.main {
	padding: 0rpx 0rpx 100rpx;
}

.up {
	width: 100%;
}

.up image {
	width: 100%;
	height: 400rpx;
	border-bottom-left-radius: 20rpx;
	border-bottom-right-radius: 20rpx;
}

.notice {
	width: 100%;
	padding: 10rpx 15rpx;
	font-size: 28rpx;
}

.notice .inner {
	text-align: left;
	width: 100%;
	padding: 20rpx 30rpx;
	background-color: #f8f8f8;
	border-radius: 15rpx;
}

.down {
	width: 100%;
	box-sizing: border-box;
	padding: 0rpx;
}

.menu {
	width: 100%;
	display: flex;
	flex-wrap: wrap;
	background-color: #fff;
	padding: 20rpx 10rpx;
}

.menu .item {
	width: 33.3%;
	display: flex;
	align-items: center;
	justify-content: center;

}

.menu .item .item-inner {
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	background-color: #E9FAFF;
	border-radius: 10rpx;
	width: 230rpx;
	height: 230rpx;
	margin-bottom: 15rpx;

}

.menu .item-inner .img {
	display: flex;
	justify-content: center;
	align-items: center;
}

.menu .item-inner .img image {
	width: 80rpx;
	height: 80rpx;
}

.menu .item-inner .title {
	margin-top: 20rpx;
	font-size: 32rpx;
	color: #000;
}

.home-list-box {
	width: 100%;
	margin-bottom: 200rpx;
	margin-top: 20rpx;
}

.home-list-box .comm-list-box {
	padding: 20rpx 0rpx 30rpx 0rpx;
	overflow: unset;
}
 